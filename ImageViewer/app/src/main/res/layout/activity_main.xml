<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="#333333">

<Button
    android:id="@+id/Prev"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:text="@string/prev_Button"
    android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/next_Button"
        android:textColor="#FFFFFF"/>

    <!--TODO needs to pic_title text needs to change as pic changes-->
    <TextView
        android:id="@+id/pic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/Next"
        android:layout_toRightOf="@id/Prev"
        android:layout_alignBottom="@id/Prev"
        android:layout_alignTop="@id/Prev"
        android:text="@string/pic_title"
        android:textColor="#FFFFFF"
        android:gravity="center"
         />



<fragment
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_fragment"
    tools:layout="@layout/image_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/Prev"
    android:scaleType="centerCrop"
    class= "com.aliza.imageviewer.ImageFragment"/>

</RelativeLayout>


